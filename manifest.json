{
  "manifest_version": 2,

  "name": "ChromeCtrlP",
  "description": "Help searching for tab/window just like the vim ctrlp does with files",
  "version": "1.0",
  "background": {
    "page": "./html/background.html"
  },
  "browser_action": {
    "default_icon": "./img/icon.png",
    "default_popup": "./html/popup.html"
  },
  "content_scripts": [{
    "matches": ["https://*/", "http://*/"],
    "js": ["./js/content.js"]
  }],
  "permissions": [
    "tabs",
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+P",
        "mac": "MacCtrl+P"
      }
    }
  }
}
